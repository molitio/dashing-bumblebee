{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": "./src",
    "outDir": "dist",
    "module": "commonjs",
    "lib": ["DOM","es6"],
    "target": "ES2020",
    "moduleResolution": "node",
    "allowJs": true,
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@/*": [
        "./*"
      ]
    },
  },
  "files": [
"src/index.ts"
],
  "include": ["**/*.ts"],
  "exclude": ["node_modules", "*.json", "*.md", "dist"]
}
